<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColourPickerActivity"
    android:orientation="vertical"
    android:id="@+id/container_colourPicker">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_colourPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/iv_colourPicker"
        android:layout_width="450dp"
        android:layout_height="467dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/color_picker_wheel" />

    <TextView
        android:id="@+id/tv_colour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PrimSec"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/current_colour"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFF" />

    <TextView
        android:id="@+id/tv_rgb_hex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RGB:                    HEX:"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_saveColour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="70dp"
        android:background="?attr/colorAccent"
        android:onClick="button_saveColour_Clicked"
        android:text="@string/text_button_saveSettings"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationY="15dp"/>

</LinearLayout>