<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseToSolvesActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_toSolves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <Button
        android:id="@+id/button_saveToSolves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="70dp"
        android:background="@color/atheneos_yellow"
        android:onClick="button_saveToSolvesClicked"
        android:text="@string/text_button_saveSettings"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationY="525dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Test"
        android:translationY="200dp" />

</RelativeLayout>